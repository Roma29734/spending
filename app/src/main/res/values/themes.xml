<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Spending" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/secondWhite</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:navigationBarColor">@color/secondWhite</item>
        <!-- Customize your theme here. -->

        <item name="android:windowBackground">@color/secondWhite</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
    </style>

    <!--textView-->

    <style name="mainTitleText" parent="TextAppearance.AppCompat" >
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textColor">@color/mainLightWhiteRed</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="secondText" parent="TextAppearance.AppCompat" >
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textColor">@color/secondGrey</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="textTitleUpBar" parent="TextAppearance.AppCompat" >
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textColor">@color/mainBlueGrey</item>
        <item name="android:textSize">18sp</item>
    </style>
    <!---->

    <style name="textWastesDetail" parent="TextAppearance.AppCompat" >
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="textDate" parent="TextAppearance.AppCompat" >
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textColor">@color/secondGrey</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="textWastes" parent="TextAppearance.AppCompat" >
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textColor">@color/mainWhiteRed</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="textButtonAdd" parent="TextAppearance.AppCompat" >
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>
<!--    materialButton-->

    <style name="mainTitleMatButton" parent="Widget.MaterialComponents.Button" >
        <item name="cornerRadius">25dp</item>
        <item name="android:backgroundTint">@color/mainBlueGrey</item>
        <item name="android:textColor">@color/mainLightWhiteRed</item>

        <item name="android:fontFamily">@font/montserrat_bold</item>

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginStart">64dp</item>
        <item name="android:layout_marginEnd">64dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="matButtonConnectWallet" parent="Widget.MaterialComponents.Button" >
        <item name="cornerRadius">20dp</item>
        <item name="android:backgroundTint">@color/mainBlueGrey</item>

        <item name="android:fontFamily">@font/montserrat_bold</item>

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginStart">64dp</item>
        <item name="android:layout_marginEnd">64dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="matButtonSelectedCurrency" parent="Widget.MaterialComponents.Button" >
        <item name="cornerRadius">0dp</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="strokeColor">@color/black</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <!---->

<!--    cardView-->

    <style name="cardBalance" parent="CardView" >
        <item name="android:backgroundTint">@color/mainBlueGrey</item>
        <item name="android:tint">@android:color/transparent</item>
        <item name="cardElevation">0dp</item>
        <item name="cardCornerRadius">16dp</item>
    </style>

<!--    -->

    <style name="editText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/text_input_box_stroke</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:textColor">@color/mainRed</item>
    </style>

    <style name="editTextMain" parent="Widget.AppCompat.EditText" >
        <item name="android:backgroundTint">@color/mainRed</item>
        <item name="android:textColorHint">@color/secondGrey</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="imageBackButton" parent="Widget.AppCompat.ImageButton" >
        <item name="android:tint">@color/black</item>
        <item name="backgroundTint">@android:color/transparent</item>
    </style>

    <style name="AppBottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_backround_border</item>
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
    </style>
</resources>